PROG=	huntd
SRCS=	answer.c conf.c draw.c driver.c execute.c expl.c \
	extern.c makemaze.c shots.c terminal.c \
	../lib/fgetln.c ../lib/strlcat.c ../lib/strlcpy.c
MAN=	huntd.6

huntd: $(SRCS)
	gcc -g -DLINUX -I../lib -lwrap -o huntd $(SRCS)

obj: $(SRCS)
	gcc -g -DLINUX -I../lib -c $(SRCS)

clean:
	rm -f *.o huntd core

install:
	cp huntd /usr/local/sbin/
	#cp huntd.init /etc/rc.d/init.d/huntd
	cp huntd.6 /usr/local/man/man6/
